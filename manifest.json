{
  "manifest_version": 2,

  "name": "Chrome CC",
  "description": "Load closed captions on web pages",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "background": {
    "persistent": false,
    "scripts": ["background.js"]
  },

  "content_scripts": [ {
    "matches": ["<all_urls>"],
    "js": ["jquery-2.1.3.js", "content.js"]
  }],

  "permissions": [
     "contextMenus",
     "activeTab"
  ]
}
